<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sdie3.edcan_project.CalculatorActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/calToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Calculator"
        android:background="#486BC7"
        app:titleTextColor="#FFFFFF">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:gravity="bottom|right"
            android:text=""
            android:textSize="30sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_weight="6"
            android:gravity="bottom|right"
            android:text=""
            android:textSize="50sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect"
                android:elevation="3dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:onClick="Btn1OnClick"
                android:translationZ="10dp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect"
                android:elevation="3dp"
                android:gravity="center"
                android:text="4"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:onClick="Btn4OnClick"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect"
                android:elevation="5dp"
                android:gravity="center"
                android:text="7"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:onClick="Btn7OnClick"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/btnBackSpace"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect2"
                android:elevation="5dp"
                android:gravity="center"
                android:text="←"
                android:textColor="#FFF"
                android:textSize="35dp"
                android:onClick="BtnBackSpaceOnClick"
                android:translationZ="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect"
                android:elevation="3dp"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:onClick="Btn2OnClick"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect"
                android:elevation="3dp"
                android:gravity="center"
                android:text="5"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:onClick="Btn5OnClick"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect"
                android:elevation="5dp"
                android:gravity="center"
                android:text="8"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:onClick="Btn8OnClick"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect"
                android:elevation="5dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFF"
                android:textSize="25dp"
                android:onClick="Btn0OnClick"
                android:translationZ="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect"
                android:elevation="3dp"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:onClick="Btn3OnClick"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect"
                android:elevation="3dp"
                android:gravity="center"
                android:text="6"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:onClick="Btn6OnClick"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect"
                android:elevation="5dp"
                android:gravity="center"
                android:text="9"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:onClick="Btn9OnClick"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect2"
                android:elevation="5dp"
                android:gravity="center"
                android:text="="
                android:textColor="#FFF"
                android:textSize="25dp"
                android:onClick="BtnEqualOnClick"
                android:translationZ="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect2"
                android:elevation="3dp"
                android:gravity="center"
                android:text="+"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:onClick="BtnPlusOnClick"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect2"
                android:elevation="3dp"
                android:gravity="center"
                android:text="-"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:onClick="BtnMinusOnClick"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/btnMul"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect2"
                android:elevation="5dp"
                android:gravity="center"
                android:text="×"
                android:textColor="#FFF"
                android:textSize="30dp"
                android:onClick="BtnMulOnClick"
                android:translationZ="10dp" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/myrect2"
                android:elevation="5dp"
                android:gravity="center"
                android:text="÷"
                android:textColor="#FFF"
                android:textSize="25dp"
                android:onClick="BtnDivOnClick"
                android:translationZ="10dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
